<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nuaa.book.second_hand_book.AddBook">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="74"
        android:background="@color/MainColor"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/backup"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="＜"
            android:textColor="#FFFFFF"
            android:textSize="40dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />
       <TextView
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="2"
           android:text="出售书籍"
           android:textColor="#FFFFFF"
           android:gravity="center"
           android:textSize="24dp"
           />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="74">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:text="ISBN:"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_height="match_parent" />
        <EditText
            android:layout_width="0dp"
            android:layout_weight="6"
            android:hint="请直接输入或点击右侧图标扫描"
            android:gravity="center"
            android:textSize="14dp"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/scan"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="270">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="244"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/addcover"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="300"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="67.5"
                >
                <EditText
                    android:id="@+id/bookname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="书名"
                    android:textSize="14dp"
                    android:singleLine="true"
                    android:selectAllOnFocus="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="67.5"
                >
                <EditText
                    android:id="@+id/author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="作者"
                    android:textSize="14dp"
                    android:singleLine="true"
                    android:selectAllOnFocus="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="67.5"
                >
                <EditText
                    android:id="@+id/publicby"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="出版社"
                    android:textSize="14dp"
                    android:singleLine="true"
                    android:selectAllOnFocus="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="67.5"
                >
                <EditText
                    android:id="@+id/originprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="原价"
                    android:textSize="14dp"
                    android:singleLine="true"
                    android:selectAllOnFocus="true"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="74"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="出售价:"
            android:textSize="14dp"
            android:singleLine="true"
            android:selectAllOnFocus="true"/>
        <EditText
            android:id="@+id/sellprice"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:singleLine="true"
            android:selectAllOnFocus="true"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="数量:"
            android:textSize="14dp"
            android:singleLine="true"
            android:selectAllOnFocus="true"/>
        <EditText
            android:id="@+id/sell_num"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:singleLine="true"
            android:selectAllOnFocus="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="74">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="分类:"
            android:textSize="14dp"
            android:singleLine="true"
            android:selectAllOnFocus="true"/>
        <EditText
            android:id="@+id/classify"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:singleLine="true"
            android:selectAllOnFocus="true"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="新旧:"
            android:textSize="14dp"
            android:singleLine="true"
            android:selectAllOnFocus="true"/>
        <EditText
            android:id="@+id/newold"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:singleLine="true"
            android:selectAllOnFocus="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="74">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="备注:"
            android:textSize="14dp"
            android:singleLine="true"
            android:selectAllOnFocus="true"/>
        <EditText
            android:id="@+id/otherdescription"
            android:layout_width="0dp"
            android:layout_weight="12"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:singleLine="true"
            android:selectAllOnFocus="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="260">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="16"
            ></LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="480"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/MainColor"
                android:text="发布"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textSize="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="16"
            ></LinearLayout>

    </LinearLayout>

</LinearLayout>
